<% if post.errors.any? %>
<div class="relative px-4 py-3 text-red-700 bg-red-100 border border-red-400 rounded" role="alert">
  <strong class="font-bold">入力内容にエラーがあります：</strong>
    <ul class="mt-3">
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
