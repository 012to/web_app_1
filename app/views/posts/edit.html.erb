<div class="relative max-w-lg pb-6 mx-auto my-20 bg-white rounded-lg">
  <h2 class="p-4 text-2xl font-normal text-center text-[#fafafa] bg-[#2ABCA7] rounded-t-lg">投稿編集</h2>
  <div class="mt-2 ml-2 text-gray-500">投稿者名：<%= current_user.name %></div>
  <%= form_for(@post) do |f| %>
    <div class="w-11/12 mx-auto my-2">
      <%= f.text_field :title,
          class: "w-full px-0 py-3 text-4xl bg-transparent border-t-transparent border-x-transparent border-b-2 border-b-gray-200 focus:border-t-transparent focus:border-x-transparent focus:border-b-gray-200 focus:ring-0 placeholder-gray-300",
          placeholder: "タイトル" %>
    </div>
    <div class="w-11/12 mx-auto my-2">
      <%= f.text_area :content,
          class: "w-full px-0 py-3 text-3xl bg-transparent border-t-transparent border-x-transparent border-b-2 border-b-gray-200 focus:border-t-transparent focus:border-x-transparent focus:border-b-gray-200 focus:ring-0 placeholder-gray-300 h-500",
          style: "height: 200px",
          placeholder: "内容" %>
    </div>
    <div class="w-11/12 mx-auto">
      <%= f.label :tag_name, 'タグ', class: "text-gray-500" %><br>
      <%= f.text_field :tag_name, value: @tag_list,
          class: "w-full px-0 text-2xl bg-transparent border-t-transparent border-x-transparent border-b-2 border-b-white focus:border-t-transparent focus:border-x-transparent focus:border-b-white focus:ring-0 placeholder-gray-300",
          placeholder: 'カンマで区切って入力してください' %>
    </div>
    <div class="absolute bottom-[-80px] left-1/2 transform -translate-x-1/2 flex justify-center space-x-4">
      <%= f.submit '更新する', class: "w-36 py-4 font-bold text-center text-white bg-[#27acd9] border-0 border-b-8 border-[#0686b2] rounded-full cursor-pointer outline-none hover:mt-1 hover:border-b-2 transition-all ease-in-out duration-300" %>
      <%= link_to "削除する", post_path(@post), method: :delete, data: { confirm: "削除しますか？" }, class: "w-36 py-4 font-bold text-center text-white bg-[#d94227] border-0 border-b-8 border-[#b20606] rounded-full cursor-pointer outline-none hover:mt-1 hover:border-b-2 transition-all ease-in-out duration-300" %>
    </div>
  <% end %>
</div>
<p class="pt-4 text-center text-gray-400 hover:underline "><a href="#" onclick="history.go(-2); return false;">一覧画面に戻る</a>
</p>

