<div class="flex justify-center">
  <div class="w-full max-w-md p-6 mt-10 text-gray-700 bg-white rounded shadow-md">
  <div class="mb-6 text-2xl text-center ">パスワードの再設定</div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" do %>
        新しいパスワード
        <% if @minimum_password_length %>
          <span class="text-red-500">*</span>
        <% end %>
      <% end %>
      <%= f.password_field :password, class: "form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <p class="mt-1 text-xs text-gray-600">(<%= @minimum_password_length %>文字以上で入力してください)</p>
      <% end %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-bold mb-2" do %>
        新しいパスワードの確認
        <span class="text-red-500">*</span>
      <% end %>
      <%= f.password_field :password_confirmation, class: "form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", autocomplete: "new-password" %>
    </div>

    <div class="flex flex-col justify-center w-1/2 text-center">
      <%= f.submit "パスワードを変更する",class: "cursor-pointer py-2 mb-8 w-20px text-white bg-indigo-500 rounded hover:bg-indigo-700 focus:outline-none focus:shadow-outline text-lg" %>
  <% end %>
  <%= render "devise/shared/links" %>
  </div>
</div>
</div>