<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-4">
      <div class="card-body">
        <h2 class="card-title text-center"><%= t('.user_edit') %></h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="mb-4">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div><%= t('.currently_waiting_confirmation', email: resource.unconfirmed_email) %></div>
          <% end %>

          <div class="mb-3">
            <%= f.label :password, t('.new_password') %> <em>(<%= t('devise.registrations.new.minimum6') %>)</em><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            <% if @minimum_password_length %>
              <i><%= t('.no_change') %></i>
            <% end %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, t('.confirm_new_password') %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :current_password %><br/>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
            <i><%= t('.confirm_change') %></i><br />
          </div>

          <div class="text-center">
            <%= f.submit t('.update'), class: "btn btn-primary" %>
          </div>
        <% end %>

        <div class="text-center mt-4">
          <%= t('.delete_user') %><br />
          <div class="mb-3">
            <%= button_to t('.delete_confirm'), registration_path(resource_name),
                data: { confirm: t('.confirm'), turbo_confirm: t('.confirm') }, method: :delete %>
          </div>
          <div class="text-center">
            <%= link_to t('.back'), :back %>
          </div>
          <div class='onesignal-customlink-container'></div>
        </div>
      </div>
    </div>
  </div>
</div>
