<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-4">
        <div class="card-body">
        <h2 class="card-title text-center"><%= t('.log_in') %></h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "sessions-form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, class: "form-label" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "sessions-form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="mb-3">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: "form-check-label" %>
            </div>
          <% end %>

          <div class="text-center mb-3">
            <%= f.submit t('.log_in'), class: "btn btn-primary" %>
          </div>
        <% end %>

        <div class="text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
