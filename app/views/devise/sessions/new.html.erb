  <% provide(:title, 'ログイン') %>
<div class="flex justify-center ">
  <div class="w-full max-w-md p-6 mt-10 bg-white rounded shadow-md">
    <h2 class="mb-6 text-2xl text-center text-gray-700"><%= t('.log_in') %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center justify-between">
          <label class="flex items-center text-sm text-gray-600">
            <%= f.check_box :remember_me, class: "mr-2" %>
            <%= f.label :remember_me %>
          </label>
        </div>
      <% end %>

      <div class="flex justify-center">
        <%= f.submit t('.log_in'), class: "cursor-pointer px-4 py-2 text-white bg-indigo-500 rounded hover:bg-indigo-700 focus:outline-none focus:shadow-outline text-lg" %>
      </div>
    <% end %>
  <div class="flex flex-col items-center justify-center mt-6 text-sm text-gray-400 cursor-pointer hover:text-indigo-300">
      <%= link_to 'パスワードを忘れましたか？', new_password_path(resource_name), class: "text-gray-400 hover:text-indigo-300" %>
    <div class="mt-2">
      <%= link_to 'アカウントをお持ちでない方はこちら', new_registration_path(resource_name), class: "text-gray-400 hover:text-indigo-300" %>
    </div>
  </div>

    <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: "false" },
        class: " mt-8 mx-auto flex justify-center items-center py-3 border border-gray-300 rounded-full shadow-sm  hover:border-indigo-400 " do %>
      <div class="flex justify-center items-center gap-2 px-4 ">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 48 48">
          <path fill="#fbc02d" d="M43.611,20.083H42V20H24v8h11.303c-1.649,4.657-6.08,8-11.303,8c-6.627,0-12-5.373-12-12 s5.373-12,12-12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C12.955,4,4,12.955,4,24s8.955,20,20,20 s20-8.955,20-20C44,22.659,43.862,21.35,43.611,20.083z"></path>
          <path fill="#e53935" d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039 l5.657-5.657C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z"></path>
          <path fill="#4caf50" d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36 c-5.202,0-9.619-3.317-11.283-7.946l-6.522,5.025C9.505,39.556,16.227,44,24,44z"></path>
          <path fill="#1565c0" d="M43.611,20.083L43.595,20L42,20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571 c0.001-0.001,0.002-0.001,0.003-0.002l6.19,5.238C36.971,39.205,44,34,44,24C44,22.659,43.862,21.35,43.611,20.083z"></path>
        </svg>
        <span class="text-gray-600 text-sm">
          Googleアカウントでログインする
        </span>
      </div>
    <% end %>
  </div>
</div>