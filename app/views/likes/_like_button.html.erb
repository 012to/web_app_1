<turbo-frame id="like_button">
  <div class="inline-flex items-center justify-center p-4 text-red-500">
    <% if liked %>
      <%= link_to post_like_path(post), method: :delete, data: { turbo_method: :delete }, class: "duration-150 ease-in-out" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
        </svg>
      <% end %>
    <% else %>
      <%= link_to post_like_path(post), method: :post, data: { turbo_method: :post }, class: "hover:text-red-300" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z", class="h-8 bg-red-600 animate-pulse" />
        </svg>
      <% end %>
    <% end %>
  </div>
</turbo-frame>
